{
  "name": "Python 3 + uv",
  "image": "mcr.microsoft.com/devcontainers/python:3.12-bullseye",
  "features": {
    // ⭐️ ここにgit-lfs featureを追加
    "ghcr.io/devcontainers/features/git:1": {
      "version": "latest",
      "lfs": "true" // Git LFSをインストールする設定
    }
  },
  // 拡張機能 (必要に応じて)
  "customizations": {
    "vscode": {
      "extensions": [
        "ms-python.python",
        "charliermarsh.ruff" // uv開発元のツール (推奨)
      ]
    }
  },
  
  // ⭐️ ここでuvをインストール
  "postCreateCommand": "curl -LsSf https://astral.sh/uv/install.sh | sh && echo 'export PATH=\"$HOME/.local/bin:$PATH\"' >> ~/.bashrc && uv sync"
}
